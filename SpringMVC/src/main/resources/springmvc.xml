<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
  xmlns:mvc="http://www.springframework.org/schema/mvc"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc https://www.springframework.org/schema/mvc/spring-mvc.xsd">

  <context:component-scan base-package="com.daiwei"></context:component-scan>
<!--  静态资源-->
  <mvc:default-servlet-handler></mvc:default-servlet-handler>
  <mvc:annotation-driven conversion-service="conversionService"></mvc:annotation-driven>
  <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
    <property name="prefix" value="/WEB-INF/page/"></property>
    <property name="suffix" value=".jsp"></property>
  </bean>
  <bean class="com.daiwei.viewresolver.MyViewResolver">
    <property name="order" value="1"></property>
  </bean>
  <bean id="conversionService" class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
      <property name="converters">
        <set>
          <ref bean="myConverter"></ref>
        </set>
      </property>
  </bean>
  <bean id="/hello" class="com.daiwei.controller.HelloController"></bean>

<!--  上传文件-->
  <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
    <property name="defaultEncoding" value="UTF-8"></property>
    <property name="maxUploadSize" value="1024000000"></property>
  </bean>
<!--  拦截器-->
  <mvc:interceptors>
    <ref bean="myInterceptor"></ref>
  </mvc:interceptors>
<!--  国际化-->
  <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
    <property name="basename" value="login"></property>
  </bean>
  <bean id="localeResolver" class="com.daiwei.localeresolver.MyLocaleResolver"></bean>

</beans>